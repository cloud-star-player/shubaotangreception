page{
    background: #efefef;
}
.refund {
    background: white;
    margin-bottom: 30rpx;
    border-radius: 2rem;
    width: 100%;
  }
  
  .price {
    color: #f60;
  }
  
  .num {
    color: #989699;
  }
  
  .refundcnt {
    font-size: 15px;
    display: flex;
    justify-content: space-between;
  }
  
  .refundsubtitle {
    align-items: flex-end;
    display: flex;
    flex-direction: column;
    font-size: 15px;
  }
  
  .refundtitle {
    margin: 0 auto;
    word-break: break-all;
    width: 350rpx;
    font-size: 23rpx;
  }
  
  
  .refundlist {
    padding: 0 20rpx;
  }
  
  .refundlist .refunditem {
    border-radius: 2rpx;
    border-bottom: 1rpx solid #e3e3e3;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 10rpx;
    width: 100%;
    position: relative;
  }
  
  .refunditem:nth-child(1) {
    border-top: 0;
  }
  
  .refunditem .refundcnt {
    flex: 1;
    padding: 0 20rpx;
  }
  
  .refundcnt .refundimage {
    float: left;
    margin-right: 20rpx;
    width: 164rpx;
    height: 164rpx;
  }
  
  .refundinfo {
    flex: 1;
    display: flex;
    justify-content: flex-start;
    justify-content: space-around;
  }
  
  .refundtitle {
    font-size: 25rpx;
  }
  .refundbutton{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  .refundtotal{
    padding-top:30rpx;
    padding-bottom: 30rpx;
    margin-right: 36rpx;
  }
  .button{
    margin-right:12rpx;
    padding-top:30rpx;
    padding-bottom: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }
  .button view{
    margin-right:12rpx;
    width:150rpx;
    text-align: center;
    border-radius: 2rem;
  }
  .button view text{
    font-size: 24rpx;
    line-height: 80rpx;
  }
  .buttonown{
    border: 1rpx solid #A9A6AA;
    border-radius: 4rpx;
    background: white;
  }
  .buttonown text{
    color: #7A777B;
  }
  .buttontwo{
    border: 1rpx solid #037D6E;
    border-radius: 4rpx;
    background: #037D6E;
  }
  .buttontwo text{
    color: white;
  }
  