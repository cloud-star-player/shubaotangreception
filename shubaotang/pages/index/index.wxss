@import "../template/top.wxss";

.top2 view {
    text-align: center;
    width: 100%;
}

.top2 {
    border: 1px solid black;
}

.banner {
    width: 100%;
    height: 300rpx;
}

.banner image {
    width: 100%;
    height: 300rpx;
}

.coupon {
    width: 100%;
    text-align: center;
    margin-top: 20rpx;
    
}

.coupon view {
    padding: 20rpx 0;
    background: #EFEEEE;
    display: flex;
    width: 90%;
    margin: 0 auto;
}

.coupon_left {
    width: 200rpx;
    height: 259rpx;
    margin: 0 auto;
}

.coupon_right {
    flex-flow: column wrap;
    /* 上下对齐 */
    justify-content: space-around;
    align-items: flex-start;
    display: flex;
}

.coupon_t1 {
    font-size: 40rpx;
}

.coupon_t2 {
    font-size: 150rpx;
}

.coupon_t3 {
    font-size: 60rpx;
}

.coupon_t4 {
    font-size: 30rpx;
    color: #9D9CA1;

}

.coupon_click:not([size='mini']) {
    width: 400rpx;
    background: steelblue;
    border-radius: 4rem;
    color: white;
    border: 1px solid steelblue;
}

.recommend {
    font-size: 40rpx;
    width: 100%;
    text-align: center;
    margin: 30rpx 0rpx;
    padding: 15rpx 0rpx;
    background: #fff;
}

.recommend_text{
    width: 100%;
    display: flex;
    justify-content: flex-start;
    flex-flow: row;
    flex-flow: wrap;
}

.recommend_img {
    width: 140rpx;
    height: 190rpx;
    padding: 30rpx 20rpx;
    background: #fff;
}