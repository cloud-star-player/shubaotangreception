/* pages/shopping/shopping.wxss */
page{
    background: #efefef;
  }
  .carts{
    background: white;
    margin-bottom: 30rpx;
    width: 100%;
  }
  .price{
    color: #f60;
  }
  .cartsname{
    padding:29rpx 10rpx;
  
  }
  .cartsname text{
    color: #666666;
    margin-left: 10rpx;
  }
  .clamp1 {
    display: -webkit-box !important;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
  }
  
  .clamp2 {
    display: -webkit-box !important;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
  
  .clamp3 {
    display: -webkit-box !important;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }
  
  .cartslist {
    padding: 0 20rpx;
  }
  
  .cartslist .cartsitem {
    border-top: 1rpx solid #e3e3e3;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 10rpx;
    width: 100%;
    position: relative;
  }
  
  .cartslist .cartsitem:nth-child(1) {
    border-top: 0;
  }
  
  .cartsselect {
    margin-top: 5px;
    width: 39rpx;
    height: 39rpx;
  }
  
  .cartsitem .cartscnt {
    flex: 1;
    padding: 0 20rpx;
  }
  
  .cartscnt .cartsimage {
    float: left;
    margin-right: 20rpx;
    width: 124rpx;
    height: 124rpx;
  }
  
  .cartscnt .cartsinfo {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 150rpx;
  }
  
  .cartscnt .cartstitle {
    font-size: 15px;
  }
  
  .cartscnt .cartsguige {
    font-size: 12px;
  }
  
  .cartscnt .cartssubtitle {
    display: flex;
    flex-direction: row;
    font-size: 15px;
  }
  
  .cartslist .cartsitem .cartsdel {
    position: absolute;
    top: 20rpx;
    right: 10rpx;
  }
  
  
  /*数量加减*/
  
  .add{
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    text-align: center;
  }
  .add text{
    align-items: center;
    width: 50rpx;
    height: 50rpx;
    color: 666666;
    padding:10rpx;
    background: #ecebeb;margin: 2rpx;
  }
  .add input{
    color: #666666;
    height: 20rpx;
    width: 80rpx;
    padding:10rpx;
    background: #ecebeb;
    margin: 2rpx;
  }
  .adds{
   display: flex;
    align-items: center;
    align-self: flex-end;
    text-align: center;
    height: 50rpx;
  }
  
  
  .bottomfixed {
    position: fixed;
    display: flex;
    flex-direction: column;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    background: #f5f5f5;
  }
  
  .bottomfixed .inner {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  
  .bottomfixed .inner .chkAll {
    font-size: 28rpx;
    margin-right: 40rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  
  .bottomfixed .inner .chkAll .allselect {
    width: 39rpx;
    height: 39rpx;
  }
  
  .bottomfixed .inner .total {
    font-size: 28rpx;
  }
  
  .bottomfixed .inner .total em {
    color: #f60;
  }
  .total{
    position: absolute;
    right: 200rpx;
    color: #f60;
  }
  .btn-pay {
    text-align: center;
    position: absolute;
    right: 20px;
    background: #f60;
    color: #fff;
    font-size:26rpx;
    width: 150rpx;
    height: 60rpx;
    border-radius:50px; 
    line-height:30px;
  }
  
  .disabled {
    background: #ccc;
  }
  
  .content {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    font-size: 15px;
    color: #999;
    text-align: center;
  }
  