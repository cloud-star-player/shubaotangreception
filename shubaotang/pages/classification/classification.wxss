@import "../template/top.wxss";
page {
  background: #f5f5f5;
}
.swiper-tab {
  width: 40%;
  display: flex;
  flex-direction: column;
  line-height: 80rpx;
  border-bottom: 2rpx solid #777;
  background: white;
}
.tab-item {
  background: white;
  width: 100%;
  margin: 0 auto;
  text-align: center;
  font-size: 23rpx;
  color: #000;
  border-bottom: 2rpx solid #f5f5f5;
  border-right: 2rpx solid #f5f5f5;
}

/**   * 导航页面显示   */

.swiper {
  width: 60%;
  position: absolute;
  right: 0;
  
}
.on {
  color: #000;
  background: #f5f5f5;
  border-right:0; 
}
.midden {
  border-top:2rpx solid #777;
  display: flex;
  flex-flow: row;
}
.banner image{
  width: 100%;
  height: 166rpx;
}
.banner{
  width: 100%;
  display: flex;
  margin: 0 auto;
}
.type{
  width: 100%;
  padding: 10rpx 0;
}
.content{
  width: 90%;
  margin: 0 auto;
  margin-top:25rpx; 
}
.type_content_tea image{
  width: 94rpx;
  height: 94rpx;
  border-radius:50% 
}
.type_content_tea{
  width: 32.5%;
  height: 127rpx;
  display: flex;
  flex-direction: column;
  align-items:center;
  margin-top:10rpx;
  margin-bottom: 10rpx; 
}
.type_content{
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  flex-flow: row wrap;
}
.type_content_tea figcaption{
  color: #333333;
  font-size:20rpx; 
}


.text-item {
  background: #f5f5f5;
  width: 100%;
  margin: 0 auto;
  text-align: center;
  font-size: 23rpx;
  color: #000;
  border-bottom: 2rpx solid #f5f5f5;
  border-right: 2rpx solid #f5f5f5;
}
.text-tab {
  width: 40%;
  display: flex;
  flex-direction: column;
  line-height: 80rpx;
  border-bottom: 2rpx solid #777;
  background: #F5F5F5;
}