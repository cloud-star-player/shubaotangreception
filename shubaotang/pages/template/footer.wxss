.footer{
  height: 85rpx;
  width: 100%;
  display: flex;
	flex-flow: row wrap;
	justify-content: space-around;
	align-items: center;
	position:fixed;bottom:0;left:0;
  z-index: 9999;
  background: white;
}
.footer-buffer{
  height: 85rpx;
  width: 100%;
}
.footers{
  width: 33.3%;
  display: flex;
	flex-flow: row wrap;
	justify-content: space-around;
}
.footers-right{
  border-right:1rpx solid #e9e9e9;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin: 0 auto;
}
.footers-right image{
  margin: 0 auto;
  width: 39rpx;
  height: 39rpx;
}
.footers view{
  width: 49%;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding-bottom: 20rpx;
}
.footers view icon{
 color:  #9f9f9f;
 font-size: 40rpx;
}
.footers view text{
 color:  #9f9f9f;
 font-size: 20rpx;
}

.purchase{
  flex: 1;
  background: #fe4543;
  padding-top:20rpx; 
  color: white;
  text-align: center;
  height: 85rpx;
}
